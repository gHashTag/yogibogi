    "react-native-modal-selector": "^1.0.0",
    "react-native-responsive-screen": "^1.1.10",
    "react-native-snap-carousel": "^3.7.5",
    "react-native-ticker": "^2.2.0",
    "react-native-typography": "^1.4.0",
    "react-native-vector-icons": "https://github.com/oblador/react-native-vector-icons.git",
